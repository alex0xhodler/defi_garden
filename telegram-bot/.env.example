# DeFi Garden Telegram Bot - Environment Configuration

# Telegram Bot Token (get from @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# QuickNode RPC Endpoint (Base network)
QUICKNODE_RPC=https://your-base-endpoint.quiknode.pro/your-key

# Wallet Encryption Key (generate with: openssl rand -base64 32)
WALLET_ENCRYPTION_KEY=your_32_character_encryption_key_here

# Database Path (optional, defaults to ./defi-garden.sqlite)
DB_PATH=./defi-garden.sqlite

# DeFi Garden API URL (optional, defaults to DeFiLlama)
DEFI_GARDEN_API_URL=https://yields.llama.fi/pools

# Chain ID (optional, defaults to Base: 8453)
CHAIN_ID=8453

# Default Settings (optional)
DEFAULT_RISK_LEVEL=3
DEFAULT_SLIPPAGE=1.0
DEFAULT_MIN_APY=5.0